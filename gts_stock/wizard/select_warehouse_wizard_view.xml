<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_select_warehouse_wizard_form" model="ir.ui.view">
        <field name="name">select.warehouse.wizard.form</field>
        <field name="model">select.warehouse.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Warehouse">
                <group>
                    <group>
                        <field name="company_id" invisible="1"/>
                        <field name="warehouse_id" required="1" domain="[('company_id', '=', company_id)]"/>
                        <field name="location_id"
                               domain="[('warehouse_id', '=', warehouse_id), ('company_id', '=', company_id)]"
                               required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Update" name="update_warehouse" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_select_warehouse_wizard_menu" model="ir.actions.act_window">
        <field name="name">Select Warehouse</field>
        <field name="res_model">select.warehouse.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_select_warehouse_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>