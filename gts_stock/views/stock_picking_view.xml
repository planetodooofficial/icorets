<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="stock_view_picking_form_change_warehouse" model="ir.ui.view">
        <field name="name">picking.warehouse</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="change_warehouse"
                        attrs="{'invisible': [('state', 'not in', ('assigned', 'confirmed', 'draft', 'waiting'))]}"
                        string="Change Warehouse" type="object" data-hotkey="z"/>
            </xpath>
            <xpath expr="//sheet/group/group[1]/field[@name='location_id']" position="after">
                <field name="warehouse_id" invisible="1" options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>

</odoo>