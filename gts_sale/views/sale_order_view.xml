<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="po_Date_sale_order_form" model="ir.ui.view">
        <field name="name">po.date.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="icorets.inherit_sale_order_form"/>
        <field name="arch" type="xml">
            <field name="client_order_ref" position="after">
                <field name="po_date"/>
                <field name="po_ex_date"/>
            </field>
            <field name="payment_term_id" position="attributes">
                <attribute name="attrs">{'required': [('state', '=', 'draft')]}</attribute>
            </field>
            <field name="user_id" position="attributes">
                <attribute name="attrs">{'required': [('state', '=', 'draft')]}</attribute>
            </field>
        </field>
    </record>
</odoo>